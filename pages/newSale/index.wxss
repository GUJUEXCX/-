.index_newSale_card {
  position: relative;
  width: auto;
  margin-left: 0px;
  padding: 5px 10px;
  overflow: hidden;
  font-size: 14px;
}

.index_newSale_panel {
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  margin-top: 0;
  overflow: hidden;
}

.index_newSale_cardThumb {
  position: relative;
  width: 90px;
  height: 90px;
  float: left;
  margin-left: auto;
  margin-right: auto;
  overflow: hidden;
  background-size: cover;
}

.index_newSale_cardImg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: auto;
  height: auto;
  max-width: 100%;
  max-height: 100%;
}

.index_newSale_cardDetail {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: relative;
  left: 10px;
  width: auto;
}

.index_newSale_cardDetail_col {
  overflow: hidden;
  line-height: 20px;
  min-height: 20px;
}

.index_newSale_cardLeft_row {
  width: auto;
  font-size: 30rpx;
}

.index_newSale_cardRight_row {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 50px;
  margin-right: 60px;
}

.index_newSale_price {
  color: red;
}
  